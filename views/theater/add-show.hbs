<section>
                                                        <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Add Show</h2>
                <form action="/theater/add-show/{{screenid}}" method="POST" enctype="multipart/form-data">
                    <label for="">Movie Name</label>
                    <input type="text" name='MovieName' class="form-control">
                    <label for="">Format</label>
                    <input type="text" name='Format' class="form-control">
                    <label for="">Language</label>
                    <input type="text" name='Language' class="form-control">
                    <label for="">Date</label>
                    <input type="text" name='Date' class="form-control">
                    <label for="">Show Time</label>
                    <input type="text" name='ShowTime' class="form-control">
                    <h1>Class Rates</h1>
                    <label for="">Vip</label>
                    <input type="number" name='Vip' class="form-control">
                    <label for="">Premium</label>
                    <input type="number" name='Premium' class="form-control">
                    <label for="">Executive</label>
                    <input type="number" name='Executive' class="form-control">
                    <label for="">Normal</label>
                    <input type="number" name='Normal' class="form-control">
                    
                    <button type="submit" class="btn btn-success mt-4">Add Show</button>


                </form>
            </div>
        </div>
    </div>
</section>
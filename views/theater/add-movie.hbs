<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Add Movie</h2>
                <form action="/theater/add-movie" method="POST" enctype="multipart/form-data">
                    <label for="">Movie Title</label>
                    <input type="text" name='MovieTitle' class="form-control">
                    <label for="">Cast</label>
                    <input type="text" name='Cast' class="form-control">
                    <label for="">Director</label>
                    <input type="text" name='Director' class="form-control">
                    <label for="">Release Date</label>
                    <input type="text" name='ReleaseDate' class="form-control">
                    <label for="">Run Time</label>
                    <input type="text" name='RunTime' class="form-control">
                    <label for="">Language</label>
                    <input type="text" name='Language' class="form-control">
                    <label for="">Type</label>
                    <input type="text" name='Type' class="form-control">
                    <label for="">Trailer Link</label>
                    <input type="text" name='TrailerLink' class="form-control">
                    <label for="">Movie Poster</label>
                    <input type="file" name="MoviePoster" class="form-control">
                    
                    <button type="submit" class="btn btn-success mt-4">Add Movie</button>


                </form>
            </div>
        </div>
    </div>
</section>
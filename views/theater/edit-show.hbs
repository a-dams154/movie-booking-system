<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Show</h2>
                <form action="/theater/edit-show/{{showid}}/{{screenid}}" method="POST" enctype="multipart/form-data">
                    <label for="">Movie Name</label>
                    <input type="text" name='MovieName' class="form-control" value="{{show.MovieName}}">
                    <label for="">Date</label>
                    <input type="text" name='Date' class="form-control" value="{{show.Date}}">
                    <label for="">Show Time</label>
                    <input type="text" name='ShowTime' class="form-control" value="{{show.ShowTime}}">
                    <h1>Class Rates</h1>
                    <label for="">Vip</label>
                    <input type="number" name='Vip' class="form-control" value="{{show.Vip}}">
                    <label for="">Premium</label>
                    <input type="number" name='Premium' class="form-control" value="{{show.Premium}}">
                    <label for="">Executive</label>
                    <input type="number" name='Executive' class="form-control" value="{{show.Executive}}">
                    <label for="">Normal</label>
                    <input type="number" name='Normal' class="form-control" value="{{show.Normal}}">
                    
                    <button type="submit" class="btn btn-success mt-4">Update</button>


                </form>
            </div>
        </div>
    </div>
</section>